<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ccc" >
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/item"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="7:30"
            android:textSize="24dp"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/repeating_1" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mon_off"/>
        
            <ImageView
                android:id="@+id/repeating_2" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tues_on"/>
             
            <ImageView
                android:id="@+id/repeating_3" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wed_off"/>
              
            <ImageView
                android:id="@+id/repeating_4" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/thr_off"/>
               
            <ImageView
                android:id="@+id/repeating_5" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fri_off"/>
                
            <ImageView
                android:id="@+id/repeating_6" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sat_off"/>
                 
            <ImageView
                android:id="@+id/repeating_sun" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sun_on"/>
        </LinearLayout>  
    </LinearLayout>
	
    <Button
        android:id = "@+id/edit"
        android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:text = "编辑"
        android:textSize = "20dp"/>
    
</LinearLayout>
